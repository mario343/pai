<%- include('partials/header') %>
<div class="container d-flex flex-column align-items-center my-5">
  <div class="text-center" style="max-width: 800px">
    <h2 class="mb-4"><%= bid.title %></h2>
    <p class="lead"><%= bid.description %></p>

    <div class="card mb-4 w-100">
      <div class="card-body text-start">
        <p class="mb-2"><strong>Instytucja:</strong> <%= bid.institution %></p>
        <p class="mb-2">
          <strong>Data rozpoczęcia:</strong> <%= new
          Date(bid.start).toLocaleString() %>
        </p>
        <p class="mb-2">
          <strong>Data zakończenia:</strong> <%= new
          Date(bid.end).toLocaleString() %>
        </p>
        <% if (!isActive) { %>
        <p class="mb-0">
          <strong>Maksymalny budżet:</strong> <%= bid.max_budget %> PLN
        </p>
        <% } %>
      </div>
    </div>

    <% if (!isActive) { %>
    <div class="alert alert-info mb-4">
      <% if (hasWinner) { %>
      <strong>Wygrywa:</strong> <%= winner.bidder %> z ofertą <%= winner.amount
      %> PLN <% } else if (unsuccessful) { %>
      <strong>Przetarg bez rozstrzygnięcia</strong> - żadna oferta nie mieściła
      się w budżecie <% if (offers && offers.length > 0) { %>
      <div class="mt-2">
        Złożono <%= offers.length %> <%= offers.length === 1 ? 'ofertę' :
        offers.length < 5 ? 'oferty' : 'ofert' %>, ale wszystkie przekraczały
        maksymalny budżet.
      </div>
      <% } %> <% } else { %> Brak złożonych ofert <% } %>
    </div>
    <% } %> <% if (offers && offers.length > 0) { %>
    <div class="w-100 mb-4">
      <h3 class="text-center mb-3">
        <% if (!isActive && unsuccessful) { %> Wszystkie złożone oferty
        (przekraczające budżet) <% } else if (!isActive) { %> Oferty (w
        kolejności od najkorzystniejszej) <% } else { %> Oferty <% } %>
      </h3>
      <ul class="list-group">
        <% offers.forEach(o => { const overBudget = !isActive && bid.max_budget
        && o.amount > bid.max_budget; %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center <%= overBudget ? 'list-group-item-danger' : '' %>"
        >
          <div>
            <strong><%= o.bidder %></strong>
            <div class="text-muted small">
              Złożono: <%= new Date(o.created_at).toLocaleString() %> <% if
              (overBudget) { %>
              <div class="text-danger fw-bold mt-1">
                <i class="bi bi-exclamation-triangle-fill"></i> Przekroczono
                budżet o <%= (o.amount - bid.max_budget).toFixed(2) %> PLN
              </div>
              <% } %>
            </div>
          </div>
          <div class="d-flex align-items-center">
            <span class="badge bg-primary rounded-pill me-2"
              ><%= o.amount %> PLN</span
            >
            <% if (overBudget) { %>
            <span class="badge bg-danger rounded-pill">Nieważna</span>
            <% } %>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
    <% } else { %>
    <p class="text-muted">Brak złożonych ofert</p>
    <% } %> <% if (isActive) { %>
    <a href="/bids/<%= bid.id %>/offer" class="btn btn-success mt-3 px-4 py-2">
      Złóż ofertę
    </a>
    <% } else { %>
    <p class="mt-3 text-danger"><strong>Przetarg zakończony</strong></p>
    <% } %>
  </div>
</div>
